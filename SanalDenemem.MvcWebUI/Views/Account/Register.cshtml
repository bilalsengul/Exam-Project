
@model SanalDenemem.MvcWebUI.Models.Register

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_TemplateLayout.cshtml";
}


<link rel="apple-touch-icon" href="~/Content/edutemplate/images/ikon.ico" />
<link rel="icon" type="image/ico" href="~/Content/edutemplate/images/ikon.ico"/>
<script>
    addEventListener("load", function () {
        setTimeout(hideURLbar, 0);
    }, false);

    function hideURLbar() {
        window.scrollTo(0, 1);
    }
</script>
<!-- //Meta tag Keywords -->
<!--/Style-CSS -->
<link rel="stylesheet" href="~/Content/edutemplate/css/stylekayit.css" type="text/css" media="all" />
<!--//Style-CSS -->



<section class="w3l-login-6">
    <div class="login-hny">
        <div class="form-content">
            <div class="form-right">
                <div class="overlay">
                    <div class="grid-info-form">
                        <h3> Kayıt Ol </h3>
                   
                    </div>
                </div>
            </div>
            <div class="form-left">
                <div class="middle">
                    <h4>Kayıt Ol</h4>
                </div>



                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "signin-form" }))
                {
                    @Html.AntiForgeryToken()

                <div class="panel panel-default">

                    @Html.ValidationSummary()
                    <div class="panel-body">



                        <div class="form-input">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "İsim", type = "text" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-input">
                            @Html.TextBoxFor(model => model.Surname, new { @class = "form-control", placeholder = "Soyisim", type = "text" })
                            @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-input">
                            @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Kullanıcı adı", type = "text" })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-input">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "E-mail", type = "text" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-input">
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Parola", type = "password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                        </div>

                        <div class="form-input">
                            @Html.PasswordFor(model => model.RePassword, new { @class = "form-control", placeholder = "Parola Tekrar", type = "password" })
                            @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })

                        </div>
                    </div>

                   
                    <button type="submit" class="btn">Hesap Oluştur</button>
                    
                </div>
                }

            </div>

        </div>

    </div>
</section>
<!-- //login-section -->


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>